class Solution {
    public String solution(int[] food) {
        String answer = "";
        StringBuffer sb = new StringBuffer();
        
        for (int i = 0; i < food.length; i++) {
            int cnt = food[i] / 2;
            
            for (int j = 0; j < cnt; j++) {
                sb.append(Integer.toString(i));
            }
        }
        
        return answer = sb.toString() + "0" + sb.reverse().toString();
    }
}
